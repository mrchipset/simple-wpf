<Window x:Class="CallNativeC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CallNativeC"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="5, 5, 5, 5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <Button x:Name="btn_call_foo" Margin="5" Click="btn_call_foo_Click">Foo</Button>
        <Button x:Name="btn_call_add" Margin="5" Click="btn_call_add_Click" Grid.Column="1">Add</Button>
        <Button x:Name="btn_call_sum" Margin="5" Click="btn_call_sum_Click" Grid.Column="0" Grid.Row="1">Sum</Button>
        <Button x:Name="btn_call_change" Margin="5" Click="btn_call_change_Click" Grid.Column="1" Grid.Row="1">Change</Button>

    </Grid>
</Window>
