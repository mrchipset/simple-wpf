<Window x:Class="BindingLabel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BindingLabel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="{Binding Path=Content}"/>
        <Button Margin="5" Grid.Row="1" x:Name="btn" Width="Auto" Height="40" Content="Click To Change" Click="btn_Click"/>
    </Grid>
</Window>
